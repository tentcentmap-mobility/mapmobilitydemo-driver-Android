<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tencent.map.navi.car.CarNaviView
        android:id="@+id/navi_car_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        >

        <Button
            android:id="@+id/remove_way_a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove way from"
            android:onClick="RemoveWayStart"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="remove way to"
            android:onClick="RemoveWayEnd"
            android:layout_marginTop="8dp"
            />

    </LinearLayout>

</RelativeLayout>
