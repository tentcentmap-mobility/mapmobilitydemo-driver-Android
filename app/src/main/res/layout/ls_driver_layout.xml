<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tencent.map.navi.car.CarNaviView
        android:id="@+id/car_navi_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <RelativeLayout
        android:id="@+id/account_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="42dp">
        <RadioGroup
            android:id="@+id/cur_account"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true">
            <RadioButton
                android:text="顺风A"
                android:textSize="12sp"
                android:id="@+id/hh_a"
                android:checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="顺风B"
                android:textSize="12sp"
                android:id="@+id/hh_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="顺风AB"
                android:textSize="12sp"
                android:id="@+id/hh_a_and_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:text="sortedAB"
                android:textSize="12sp"
                android:id="@+id/hh_a_and_b_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RadioGroup>
    </RelativeLayout>

    <Button
        android:id="@+id/start_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开启定位"
        android:padding="5dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="24dp"
        android:onClick="startDLocation"
        android:layout_below="@id/account_layout"
        />

    <Button
        android:id="@+id/stop_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止定位"
        android:padding="5dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/start_location"
        android:layout_marginTop="8dp"
        android:onClick="stopDLocation"
        />

    <Button
        android:id="@+id/pull_psg_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拉乘客定位"
        android:padding="5dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/stop_location"
        android:layout_marginTop="8dp"
        android:onClick="pullGuestPoints"
        />

    <Button
        android:id="@+id/stop_pull_guest_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="停止拉取"
        android:padding="5dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@id/pull_psg_location"
        android:layout_marginTop="8dp"
        android:onClick="stopPullGuestPoints"
        />

    <Button
        android:id="@+id/start_receive_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始司乘"
        android:padding="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/account_layout"
        android:onClick="startReceiveOrder"
        />

    <Button
        android:id="@+id/stop_receive_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束司乘"
        android:padding="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/start_receive_order"
        android:onClick="stopReceiveOrder"
        />

    <Button
        android:id="@+id/receive_hh_order"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="顺风单"
        android:padding="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/stop_receive_order"
        android:onClick="receiveHitchHikeOrder"
        />

    <Button
        android:id="@+id/start_meeting_guest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始接驾"
        android:padding="5dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/receive_hh_order"
        android:onClick="startMeetingGuest"
        />

</RelativeLayout>
